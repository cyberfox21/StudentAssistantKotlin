<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#ffffff</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#3D5169</item>
        <item name="colorAccent">#3D5169</item>
    </style>

    <style name="CustomNoActionBar" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#3D5169</item>
        <item name="colorAccent">#3D5169</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#ffffff</item>
    </style>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/avenirnextcyr_light</item>
        <item name="android:fontFamily">@font/avenirnextcyr_light</item>
    </style>


    <style name="toolbar_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/avenirnextcyr_medium</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
    </style>

    <style name="floating_button" parent="AppTheme">

        <item name="colorPrimaryDark">@color/color_icon_background</item>
        <item name="colorAccent">@color/color_icon_background</item>

    </style>


    <style name="toolbar_expended_text" parent="toolbar_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#007C7777</item>
        <item name="fontFamily">@font/avenirnextcyr_light</item>
        <item name="android:fontFamily">@font/avenirnextcyr_light</item>
    </style>

    <style name="toolbar_collapsed_text" parent="toolbar_expended_text">
        <item name="android:textColor">#7C7777</item>
    </style>




</resources>
