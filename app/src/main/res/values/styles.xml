<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#ffffff</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#3D5169</item>
        <item name="colorAccent">#3D5169</item>
    </style>

    <style name="AppTheme_5" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/color_icon_background</item>
    </style>

    <style name="CustomNoActionBar" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#3D5169</item>
        <item name="colorAccent">#3D5169</item>

        <item name="colorControlHighlight">@color/color_main_white</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#ffffff</item>
    </style>

    <style name="menu_text_style" parent="Theme.MaterialComponents.CompactMenu">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="itemFillColor">#fff</item>


    </style>


    <style name="toolbar_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="itemFillColor">#fff</item>
        <item name="fontFamily">@font/avenirnextcyr_medium</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>

    </style>

    <style name="floating_button" parent="Theme.MaterialComponents">

        <item name="colorPrimaryDark">@color/color_icon_background</item>
        <item name="colorAccent">@color/color_icon_background</item>
        <item name="colorPrimary">@color/color_icon_background</item>
        <item name="colorButtonNormal">@color/color_icon_background</item>

    </style>


    <style name="toolbar_expended_text" parent="toolbar_text_style">
        <item name="android:textSize">23sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#fff</item>
        <item name="fontFamily">@font/avenirnextcyr_medium</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
    </style>

    <style name="toolbar_collapsed_text" parent="toolbar_expended_text">
        <item name="android:textColor">#7C7777</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Advenced_Theme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#3D5169</item>
        <item name="colorControlNormal">#fff</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorAccent">#3D5169</item>
    </style>

    <style name="AppTheme_3" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:colorControlActivated">@color/color_main_light</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#3D5169</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorAccent">#3D5169</item>
    </style>

    <style name="theme_edittext" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorControlActivated">@color/color_main_light</item>
        <item name="colorPrimary">@color/color_main_light</item>
        <item name="colorPrimaryDark">#3D5169</item>
        <item name="colorControlNormal">@color/color_main_light</item>
        <item name="colorAccent">#3D5169</item>
        <item name="fontFamily">@font/avenirnextcyr_medium</item>



        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">16dp</item>
        <item name="listPreferredItemPaddingRight">32dp</item>



    </style>


    <style name="theme_navview" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorControlActivated">@color/color_main_light</item>
        <item name="colorPrimary">@color/color_main_light</item>
        <item name="colorPrimaryDark">#3D5169</item>
        <item name="colorControlNormal">@color/color_main_light</item>
        <item name="colorAccent">#3D5169</item>
        <item name="fontFamily">@font/avenirnextcyr_medium</item>

        <item name="colorOnSurface">#656565</item>



        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">16dp</item>
        <item name="listPreferredItemPaddingRight">32dp</item>



    </style>

    <style name="GlideSliderCardStyle" parent="Base.CardView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="GlideSliderBackgroundStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/glide_slider_background_color</item>
    </style>

    <style name="GlideSliderImageStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="GlideSliderLoadingStyle" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="GlideSliderDescriptionBackgroundStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/glide_slider_description_background_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="GlideSliderDescriptionTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/glide_slider_description_color</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

</resources>