<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/color_card_background"
    tools:cardUseCompatPadding="true"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_in_task_1"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/card_task_image_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/avenirnextcyr_medium"
                android:text="Сделать завтрак"
                android:textColor="@color/color_main_light"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_task_image_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/avenirnextcyr_medium"
                android:text="12:30 - 13:00"
                android:textColor="@color/color_card_text"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/card_task_image_title"
                app:layout_constraintTop_toBottomOf="@+id/card_task_image_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/card_task_image_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirnextcyr_light"
            android:text="Приготовить вкуснейшие булочки, посыпать их сахаром, пригласить Танюшу на чай и  посмотреть с ней фильм вместе с булочками"
            android:textColor="@color/color_card_text"
            android:layout_marginLeft="28dp"
            android:textSize="14dp"
            android:visibility="gone"
            android:layout_marginRight="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/card_task_image_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_marginRight="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/card_task_image_icon"
            app:layout_constraintEnd_toEndOf="@+id/card_task_image_icon"
            app:layout_constraintStart_toStartOf="@+id/card_task_image_icon"
            app:layout_constraintTop_toTopOf="@+id/card_task_image_icon" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_in_task_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="5dp"
            android:layout_margin="8dp"
            app:cardElevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card_task_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:tint="#26000000"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_document"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>
