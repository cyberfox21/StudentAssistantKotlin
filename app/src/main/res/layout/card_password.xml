<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:theme="@style/theme_edittext"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/color_toolbar"
        android:layout_margin="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <EditText
                    android:id="@+id/card_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do homework"
                    android:inputType="none"
                    android:background="@android:color/transparent"
                    android:focusable="false"

                    android:fontFamily="@font/avenirnextcyr_medium"
                    android:textColor="@color/color_card_title"

                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="28dp"
                        android:layout_height="28dp"

                        android:src="@drawable/ic_person_black_24dp"/>

                    <TextView
                        android:id="@+id/card_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hello"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:fontFamily="@font/avenirnextcyr_medium"
                        android:textColor="@color/color_card_text"
                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">


                    <ImageView
                        android:id="@+id/imageView_2"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_lock_outline_black_24dp"/>

                    <TextView
                        android:id="@+id/card_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hello"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:fontFamily="@font/avenirnextcyr_medium"
                        android:textColor="@color/color_card_text"
                        />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/card_task_image_icon"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:src="@color/color_main_light"
                    android:scaleType="centerCrop"
                    />

            </LinearLayout>





        </LinearLayout>








    </com.google.android.material.card.MaterialCardView>





</androidx.coordinatorlayout.widget.CoordinatorLayout>

