<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:theme="@style/Theme.MaterialComponents">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/color_toolbar"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/card_task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenirnextcyr_medium"

                    android:text="Do homework"
                    android:textAppearance="?attr/textAppearanceHeadline6"

                    android:textColor="@color/color_card_title" />

                <TextView
                    android:id="@+id/card_task_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/avenirnextcyr_medium"
                    android:text="12:30 - 16:30"
                    android:textAppearance="?attr/textAppearanceListItemSecondary"
                    android:textColor="@color/color_card_text" />

                <TextView
                    android:id="@+id/card_task_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/avenirnextcyr_light"
                    android:text="пвчапорлрпативмвьбрьптаивмвирбоюоброьпртапим"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/color_card_text" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="удалить"
                    android:textColor="@color/color_main_light"
                    app:rippleColor="@color/color_main_light" />

                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="изменить"
                    android:textColor="@color/color_main_light"
                    app:rippleColor="@color/color_main_light" />
            </LinearLayout>
            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/card_task_icon"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:src="#EE6A6A"
                    android:scaleType="centerCrop"
                    />

            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>