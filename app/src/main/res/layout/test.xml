<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:theme="@style/Theme.MaterialComponents"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/color_toolbar"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:id="@+id/card_task_image"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/card_task_image_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do homework"

                    android:fontFamily="@font/avenirnextcyr_medium"
                    android:textColor="@color/color_card_title"

                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />
                <TextView
                    android:id="@+id/card_task_image_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="12:30 - 16:30"
                    android:fontFamily="@font/avenirnextcyr_medium"
                    android:textAppearance="?attr/textAppearanceListItemSecondary"
                    android:textColor="@color/color_card_text"
                    />
                <TextView
                    android:id="@+id/card_task_image_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="пвчапорлрпативмвьбрьптаивмвирбоюоброьпртапим"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:fontFamily="@font/avenirnextcyr_light"
                    android:textColor="@color/color_card_text"
                    />

            </LinearLayout>

            <!-- Buttons -->


        </LinearLayout>
        <ImageView
            android:id="@+id/card_task_image_icon"
            android:layout_width="24dp"
            android:visibility="invisible"
            android:layout_height="24dp"
            android:layout_marginRight="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_task_image_title"
            app:layout_constraintEnd_toEndOf="parent" />
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

