<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/color_toolbar"
        android:layout_margin="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:id="@+id/card_task_image"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/card_task_image_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do homework"

                    android:fontFamily="@font/avenirnextcyr_medium"
                    android:textColor="@color/color_card_title"

                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/card_task_image_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30 - 16:30"
                    android:fontFamily="@font/avenirnextcyr_medium"
                    android:textAppearance="?attr/textAppearanceListItemSecondary"
                    android:textColor="@color/color_card_text"
                    />

                </LinearLayout>


                <TextView
                    android:id="@+id/card_task_image_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="пвчапорлрпативмвьбрьптаивмвирбоюоброьпртапим"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:fontFamily="@font/avenirnextcyr_light"
                    android:textColor="@color/color_card_text" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="удалить"
                    app:rippleColor="@color/color_main_light"
                    android:textColor="@color/color_main_light"
                    style="?attr/borderlessButtonStyle"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="изменить"
                    app:rippleColor="@color/color_main_light"
                    style="?attr/borderlessButtonStyle"
                    android:textColor="@color/color_main_light"
                    />
            </LinearLayout>

            <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/card_task_image_icon"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:src="#88D8A9"
                android:scaleType="centerCrop"
                />

        </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

