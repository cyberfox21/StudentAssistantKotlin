


<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.Design">
    <!-- Customize your theme here. -->
    <item name="android:navigationBarColor" tools:targetApi="lollipop">#121212</item>
    <item name="colorPrimary">#121212</item>
    <item name="colorControlHighlight">#121212</item>

    <item name="colorPrimaryDark">@color/color_navview_header</item>
    <item name="colorAccent">@color/color_main_light</item>
</style>

<style name="CustomNoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name = "android:windowActionBar">false</item>
    <item name = "android:windowNoTitle">true</item>
    <item name="colorPrimary">#121212</item>
    <item name="colorControlHighlight">#121212</item>
    <item name="colorPrimaryDark">@color/color_navview_header</item>
    <item name="colorAccent">@color/color_main_light</item>
    <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/color_main_white</item>
</style>

<style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
    <item name="android:textSize">16sp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/color_word_white</item>
    <item name="fontFamily">@font/avenirnextcyr_light</item>
    <item name="android:fontFamily">@font/avenirnextcyr_light</item>
</style>


<style name="toolbar_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
    <item name="android:textSize">20sp</item>
    <item name="android:textAllCaps">false</item>
    <item name="fontFamily">@font/avenirnextcyr_medium</item>
    <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
</style>

</resources>
