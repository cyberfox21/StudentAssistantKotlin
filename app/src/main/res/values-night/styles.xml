<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#121212</item>
        <item name="colorPrimary">#1e1e1e</item>
        <item name="colorControlHighlight">#1e1e1e</item>

        <item name="colorPrimaryDark">@color/color_navview_header</item>
        <item name="colorAccent">@color/color_main_light</item>
    </style>


    <style name="AppTheme_5" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/color_icon_background</item>
    </style>

    <style name="CustomNoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
        <item name="colorPrimary">#1e1e1e</item>
        <item name="colorControlHighlight">#1e1e1e</item>
        <item name="colorPrimaryDark">@color/color_navview_header</item>
        <item name="colorAccent">@color/color_main_light</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/color_main_white</item>
    </style>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="floating_button" parent="Theme.MaterialComponents">

        <item name="colorPrimaryDark">@color/color_icon_background</item>
        <item name="colorAccent">@color/color_icon_background</item>
        <item name="colorPrimary">@color/color_icon_background</item>
        <item name="colorButtonNormal">@color/color_icon_background</item>

    </style>


    <style name="toolbar_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/avenirnextcyr_medium</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
    </style>


    <style name="theme_edittext" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:colorControlActivated">@color/color_main_light</item>
        <item name="colorPrimary">@color/color_main_light</item>
        <item name="colorPrimaryDark">#3D5169</item>
        <item name="colorControlNormal">@color/color_main_light</item>
        <item name="colorAccent">#3D5169</item>
    </style>


    <style name="theme_navview" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:colorControlActivated">@color/color_main_light</item>
        <item name="colorPrimary">@color/color_main_light</item>
        <item name="colorPrimaryDark">#3D5169</item>
        <item name="colorControlNormal">@color/color_main_light</item>
        <item name="colorAccent">#3D5169</item>
        <item name="fontFamily">@font/avenirnextcyr_medium</item>

        <item name="colorOnSurface">#A5A5A5</item>



        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">16dp</item>
        <item name="listPreferredItemPaddingRight">32dp</item>



    </style>

</resources>